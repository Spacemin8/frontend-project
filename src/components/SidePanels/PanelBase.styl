.panel
  top 0
  height 100%
  z-index 10
  position absolute
  background-color #fff

  &_position
    &_left
      left 0

    &_right
      right 0

  &__header
    height 24px
    cursor pointer
    font-size 13px
    font-weight 700
    padding 4px 12px
    line-height 16px
    color rgba(#000, 0.5)
    user-select none
    background-color rgba(#000, 0.05)

  &_hidden
    width 40px
    margin 8px
    height 40px
    border-radius 7px
    background-color #fff
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 5px 10px rgba(0, 0, 0, 0.1)

  &_hidden &__header
    padding 0
    width 100%
    height 100%
    color #000
    display flex
    line-height normal
    align-items center
    justify-content center
    background-color transparent
