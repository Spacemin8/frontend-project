.panel
  top 0
  height 100%
  z-index 10
  overflow auto
  position absolute
  background-color #fff
  styled-scrollbars()

  &_position
    &_left
      left 0
      border-right 1px solid rgba(#000, 0.1)

    &_right
      right 0
      border-left 1px solid rgba(#000, 0.1)

  &__header
    height 24px
    top 0
    z-index 2
    cursor pointer
    font-size 13px
    font-weight 700
    padding 4px 12px
    line-height 16px
    color rgba(#000, 0.5)
    user-select none
    position sticky
    background-color rgb(242, 242, 242)

  &__content
    z-index 1
    position relative

  &_hidden
    width 40px
    margin 8px
    height 40px
    border none
    border-radius 7px
    background-color #fff
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 5px 10px rgba(0, 0, 0, 0.1)

  &_hidden &__header
    padding 0
    width 100%
    height 100%
    color #000
    display flex
    line-height normal
    align-items center
    justify-content center
    background-color transparent
