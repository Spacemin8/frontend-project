.region-editor
  --col-count 2
  --col-width calc((100% - 16px) / var(--col-count))
  margin 0 8px
  display grid
  grid-gap 8px
  grid-auto-flow row
  box-sizing border-box
  width calc(100% - 16px)
  grid-template-columns repeat(var(--col-count), var(--col-width))

  &__property
    display flex
    width 100%
    height 32px
    align-items center
    position relative

  &__text
    top 0
    left 0
    height 100%
    display flex
    width 16px
    margin-left 8px
    align-items center
    position absolute
    text-align center
    opacity 0.3
    pointer-events none

  &__input
    margin 0

    &:not([type=checkbox]):not([type=radio])
      flex 1
      outline none
      border 1px solid transparent
      height 32px
      border-radius 4px
      box-sizing border-box
      padding 4px 8px 4px 28px
      max-width calc(100% - 15px)

      &:hover
        border-color #E5E5E5

      &:focus
        border-color $accent_color
        box-shadow 0 0 0 1px $accent_color

  &__input[type=checkbox] + &__text,
  &__input[type=radio] + &__text
    margin-left 0
    margin-right 4px
    position static
