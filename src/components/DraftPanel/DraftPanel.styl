.draft-panel
  margin 8px 0
  display flex
  align-items center
  position fixed
  height 48px
  bottom 30px
  left 50%
  transform translate3d(-50%, 0, 0)
  background-color #fff
  padding 0 20px
  border-radius 50px
  box-shadow: 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 5px 10px rgba(0, 0, 0, 0.1);

  svg
    margin-right 12px

  &__toggle
    padding 0
    border 0
    vertical-align -0.5px
    height auto
    color $accent_color
    background none
    padding 0
    cursor pointer

    &:hover
      opacity 0.8
